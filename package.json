{
  "name": "portfolio",
  "private": true,
  "scripts": {
    "build": "rimraf public && hugo --gc --minify",
    "build:docker": "docker compose -f .build/docker-compose.yml build",
    "dev": "rimraf public && hugo --watch",
    "dev:docker": "docker compose -f .build/docker-compose.yml up --watch",
    "format": "prettier --ignore-unknown --write .",
    "format:check": "prettier --ignore-unknown --check .",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oberpierre/portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/oberpierre/portfolio/issues"
  },
  "devDependencies": {
    "blowfish-tools": "^1.10.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
